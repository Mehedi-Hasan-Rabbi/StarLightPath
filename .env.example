# ============================================
# Django Configuration
# ============================================

# Django / app
SECRET_KEY=django-insecure-your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=127.0.0.1,localhost

# ============================================
# Database Configuration
# ============================================
# Defaults to SQLite. To use PostgreSQL:
# 1. Set DB_ENGINE to django.db.backends.postgresql
# 2. Fill in DB_USER, DB_PASSWORD, DB_HOST, DB_PORT
# 3. Create database and user in PostgreSQL first

DB_ENGINE=django.db.backends.sqlite3
DB_NAME=absolute/path/to/db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_URL=redis://127.0.0.1:6379/1

# ============================================
# CORS Configuration
# ============================================
# Add your frontend URLs here (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://frontend.example.com

# ============================================
# Security Settings (Production)
# ============================================
# Requires HTTPS in production
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_SAMESITE=None
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# Email Configuration (SMTP)
# ============================================
# Gmail: https://support.google.com/accounts/answer/185833
# Use App Passwords for Gmail accounts with 2FA enabled

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================
# JWT Authentication (Simple JWT)
# ============================================
SIMPLE_JWT_ACCESS_TOKEN_HOURS=1
SIMPLE_JWT_REFRESH_TOKEN_DAYS=7
SIMPLE_JWT_ROTATE_REFRESH_TOKENS=True
SIMPLE_JWT_BLACKLIST_AFTER_ROTATION=True

# ============================================
# API Documentation (Spectacular/DRF)
# ============================================
SPECTACULAR_TITLE=Star Light Path API
SPECTACULAR_DESCRIPTION=API documentation for Star Light Path project
SPECTACULAR_VERSION=1.0.0
SPECTACULAR_SERVE_INCLUDE_SCHEMA=False

# ============================================
# OTP & Password Reset Configuration
# ============================================
PASSWORD_RESET_OTP_TTL=600
PASSWORD_RESET_OTP_LENGTH=5
PASSWORD_RESET_MAX_REQUESTS_PER_HOUR=5
PASSWORD_RESET_MAX_VERIFY_ATTEMPTS=5
PASSWORD_RESET_RESEND_COOLDOWN=60
PASSWORD_RESET_VERIFIED_TTL=600
PASSWORD_RESET_OTP_PEPPER=CHANGE_ME_TO_A_RANDOM_SECRET_STRING

# ============================================
# Localization & Static Files
# ============================================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
STATIC_URL=/static/
MEDIA_URL=/media/
MEDIA_ROOT=absolute/path/to/media
AUTH_USER_MODEL=user.Users